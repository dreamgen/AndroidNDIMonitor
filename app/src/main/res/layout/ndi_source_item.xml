<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/ndi_source_card_background"
    android:padding="16dp">

    <!-- NDI 源圖標 -->
    <ImageView
        android:id="@+id/ndi_source_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ndi_source_icon"
        android:scaleType="centerInside"
        android:layout_marginBottom="12dp" />

    <!-- NDI 源名稱 -->
    <TextView
        android:id="@+id/ndi_source_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NDI 源名稱"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="4dp" />

    <!-- NDI 源機器名稱 -->
    <TextView
        android:id="@+id/ndi_source_machine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="機器名稱"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- 狀態資訊區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <!-- 線上狀態指示器 -->
        <View
            android:id="@+id/ndi_source_status_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/source_status_indicator"
            android:layout_marginEnd="6dp" />

        <!-- 狀態文字 -->
        <TextView
            android:id="@+id/ndi_source_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="線上"
            android:textColor="#4CAF50"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- NDI 類型標籤（可選） -->
    <TextView
        android:id="@+id/ndi_source_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="NDI"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/ndi_type_badge"
        android:padding="2dp"
        android:layout_marginTop="4dp"
        android:visibility="visible" />

</LinearLayout>