<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 選中狀態 -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/ndi_primary" />
                </shape>
            </item>
            <item android:top="3dp" android:bottom="3dp" 
                  android:left="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" />
                    <solid android:color="@color/tv_surface" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- 正常狀態 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/tv_surface_variant" />
            <stroke android:width="1dp" android:color="#404040" />
        </shape>
    </item>
    
</selector>